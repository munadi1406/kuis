---
import Navbar from "../components/Navbar.jsx";
// import { ViewTransitions } from 'astro:transitions';

import Font from "../components/Font.astro";
const { title } = Astro.props;
import "@/styles/globals.css";
import { supabase } from "../lib/supabase";
// import axios from "axios";
import DashboardNav from "../components/DashboardNav";
import { SEO } from "astro-seo";
import { Toaster } from "@/components/ui/toaster";
import RoleDialog from './../components/RoleDialog'
import { ViewTransitions } from "astro:transitions";
const { cookies, redirect } = Astro;


const path = Astro.url.pathname;
const accessToken = cookies.get("sb-access-token");
const refreshToken = cookies.get("sb-refresh-token");

if (!accessToken || !refreshToken) {
  return redirect("/signin");
}

const { data, error } = await supabase.auth.setSession({
  refresh_token: refreshToken.value,
  access_token: accessToken.value,
});

if (error) {
  cookies.delete("sb-access-token", {
    path: "/",
  });
  cookies.delete("sb-refresh-token", {
    path: "/",
  });

  return redirect("/");
}

const {
  data: { user ,},
} = await supabase.auth.getUser();

let open = false;

const {data:checkNIP} = await supabase.from('guru').select('id_user').eq('id_user',user.id).single();


const {data:checkNIS} = await supabase.from('siswa').select('id_user').eq('id_user',user.id).single();
 
if(!checkNIS && !checkNIP){
  open = true
}







